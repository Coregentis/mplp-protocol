{
  "security": {
    "enableSecurityScan": true,
    "enableDependencyCheck": true,
    "enableLicenseCheck": true,
    "allowedLicenses": [
      "MIT",
      "Apache-2.0",
      "BSD-3-Clause",
      "ISC",
      "BSD-2-Clause",
      "CC0-1.0",
      "Unlicense"
    ],
    "maxCriticalVulnerabilities": 0,
    "maxHighVulnerabilities": 2,
    "securityPatterns": {
      "enableHardcodedSecretDetection": true,
      "enableSensitiveDataDetection": true,
      "customPatterns": []
    }
  },
  "validation": {
    "enablePreReleaseTests": true,
    "enableCompatibilityTests": true,
    "enablePerformanceTests": true,
    "enableDocumentationValidation": true,
    "requiredCoverage": 80,
    "testTimeout": 300000,
    "performanceThresholds": {
      "maxResponseTime": 5000,
      "maxMemoryUsage": "512MB",
      "maxCpuUsage": 80
    }
  },
  "approval": {
    "requireManualApproval": true,
    "approvalTimeout": 3600000,
    "requiredApprovers": [
      "maintainer",
      "security-team"
    ],
    "approvalMatrix": {
      "patch": {
        "requireManualApproval": false,
        "requiredApprovers": ["maintainer"]
      },
      "minor": {
        "requireManualApproval": true,
        "requiredApprovers": ["maintainer", "tech-lead"]
      },
      "major": {
        "requireManualApproval": true,
        "requiredApprovers": ["maintainer", "tech-lead", "security-team"]
      }
    }
  },
  "deployment": {
    "enableStagingDeployment": true,
    "enableProductionDeployment": true,
    "rollbackOnFailure": true,
    "healthCheckTimeout": 300000,
    "deploymentStrategy": "blue-green",
    "environments": {
      "development": {
        "autoDeployOnPush": true,
        "requireApproval": false,
        "healthChecks": ["basic"]
      },
      "staging": {
        "autoDeployOnPush": false,
        "requireApproval": true,
        "healthChecks": ["basic", "integration", "performance"]
      },
      "production": {
        "autoDeployOnPush": false,
        "requireApproval": true,
        "healthChecks": ["basic", "integration", "performance", "security"]
      }
    }
  },
  "notifications": {
    "enableSlackNotifications": false,
    "enableEmailNotifications": false,
    "enableWebhookNotifications": false,
    "channels": {
      "slack": {
        "webhook": "",
        "channel": "#releases"
      },
      "email": {
        "recipients": [],
        "smtp": {
          "host": "",
          "port": 587,
          "secure": false
        }
      },
      "webhook": {
        "url": "",
        "method": "POST",
        "headers": {}
      }
    }
  },
  "artifacts": {
    "enableArtifactStorage": true,
    "retentionDays": 90,
    "compressionLevel": 6,
    "includeSourceMaps": false,
    "includeDependencies": false,
    "storage": {
      "type": "local",
      "path": "./release",
      "s3": {
        "bucket": "",
        "region": "",
        "accessKeyId": "",
        "secretAccessKey": ""
      }
    }
  },
  "quality": {
    "enableCodeQualityChecks": true,
    "enableLinting": true,
    "enableTypeChecking": true,
    "qualityGates": {
      "minCoverage": 80,
      "maxComplexity": 10,
      "maxDuplication": 5,
      "maxTechnicalDebt": "1h"
    },
    "tools": {
      "eslint": {
        "enabled": true,
        "configFile": ".eslintrc.js"
      },
      "prettier": {
        "enabled": true,
        "configFile": ".prettierrc"
      },
      "sonarqube": {
        "enabled": false,
        "serverUrl": "",
        "projectKey": ""
      }
    }
  },
  "monitoring": {
    "enableReleaseMonitoring": true,
    "monitoringDuration": 1800000,
    "alertThresholds": {
      "errorRate": 5,
      "responseTime": 5000,
      "memoryUsage": 80,
      "cpuUsage": 80
    },
    "rollbackTriggers": {
      "errorRateThreshold": 10,
      "responseTimeThreshold": 10000,
      "healthCheckFailures": 3
    }
  }
}